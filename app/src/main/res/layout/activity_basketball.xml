<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="activity.gswe4645ctec.aboutme.Basketball">


    <FrameLayout android:id="@+id/container" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/karlmalone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="I have been playing basketball since birth. It is my passion and I love it. I play for Jordan High and hope to play college."
            android:id="@+id/textView5"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Home"
            android:id="@+id/homeButton"
            android:layout_gravity="left|bottom"/>
    </FrameLayout>


</RelativeLayout>
